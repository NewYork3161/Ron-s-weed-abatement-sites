<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Contact Us - Bower Company Weed Abatement</title>
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      background-color: #f5f5f5;
    }

    .contact-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      padding: 40px 20px;
      background: white;
    }

    .form-section {
      flex: 2;
      padding: 40px;
      max-width: 800px;
    }

    .form-section h2 {
      font-size: 24px;
      margin-bottom: 24px;
      text-align: center;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 18px;
    }

    input, textarea {
      width: 100%;
      padding: 16px;
      font-size: 16px;
      border: none;
      background-color: #f2f2f2;
      border-radius: 6px;
      resize: none;
    }

    button {
      padding: 14px;
      font-size: 16px;
      background-color: #28a745;
      color: white;
      border: none;
      border-radius: 6px;
      text-transform: uppercase;
      font-weight: bold;
      cursor: pointer;
      transition: background-color 0.2s ease;
    }

    button:hover {
      background-color: #218838;
    }

    .phone-number {
      text-align: center;
      margin-top: 20px;
    }

    .phone-number h3 {
      font-size: 20px;
      margin: 10px 0;
    }

    .call-button {
      padding: 12px 24px;
      font-size: 16px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 6px;
      text-transform: uppercase;
      font-weight: bold;
      text-decoration: none;
      display: inline-block;
    }

    .map-section {
      flex: 1;
      padding: 20px;
      max-height: 400px;
    }

    .map-section iframe {
      width: 100%;
      height: 100%;
      border: none;
      border-radius: 8px;
    }

    @media (max-width: 768px) {
      .contact-container {
        flex-direction: column;
        padding: 20px;
      }

      .form-section, .map-section {
        max-width: 100%;
        padding: 20px 0;
      }

      .map-section iframe {
        height: 300px;
      }
    }
  </style>
</head>
<body>

  <div class="contact-container">
    <!-- Form Section -->
    <div class="form-section">
      <h2>SEND A MESSAGE</h2>
      <form action="/send-email" method="POST">
        <input type="text" name="name" placeholder="Your Name" required />
        <input type="email" name="email" placeholder="Email Address" required />
        <textarea name="message" rows="5" placeholder="Message" required></textarea>
        <button type="submit">Send Message</button>
      </form>

      <div class="phone-number">
        <h3>(916) 206-4059</h3>
        <a href="tel:9162064059" class="call-button">Call Now</a>
      </div>
    </div>

    <!-- Map Section -->
    <div class="map-section">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3132.676331113305!2d-122.07726592418208!3d37.92282230632439!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8085610c26eaec7b%3A0x312ea3a43e44c47c!2s2486%20Warren%20Ln%2C%20Walnut%20Creek%2C%20CA%2094597!5e0!3m2!1sen!2sus!4v1720280452536!5m2!1sen!2sus"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade">
      </iframe>
    </div>
  </div>

</body>
</html>
